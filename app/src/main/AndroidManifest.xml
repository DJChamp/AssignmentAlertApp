<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.assignmentalertapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Assignment Alert App"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEntry"
            android:label="New Entry"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".SubjectPage"
            android:label="Assignments"/>
        <activity
            android:name=".DisplayAssignment"
            android:label="Assignment Details"/>
        <activity
            android:name=".AlarmPage"
            android:label="Assignment Alarm">

        </activity>
        <activity
            android:name=".SubjectSettings"
            android:label="Settings"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ShowNotification"
            android:label="Assignment"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".About"
            android:label="About"
            android:theme="@style/AppTheme"
            />
    </application>

</manifest>
