<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theory Subject 1 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/th_1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theory Subject 2 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/th_2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theory Subject 3 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/th_3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theory Subject 4 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/th_4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theory Subject 5 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/th_5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lab Subject 1 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/lab_1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lab Subject 2 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/lab_2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lab Subject 3"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/lab_3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tutorial Subject 1 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText android:id="@+id/tut_1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Tutorial Subject 2 : "
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tut_2"
                    android:width="200dp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/setSubjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Set"
            android:textColor="@color/txt"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>